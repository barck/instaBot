header
  width 100%
  color #fff
  display flex
  flex-wrap wrap
  justify-content space-between
  align-items center
  padding 0 50px
  height 80px
  position fixed
  text-align center
  @media(max-width 768px)
    padding 0
  .logo
    width 33%
    text-align center
    @media(max-width 768px)
      width 100%
  a
    text-decoration none
    font-size 16px
    color #fff
    font-weight 400
    width 20%
    font-family Montserrat
    &:hover
      text-decoration underline
    @media(max-width 768px)
      display none

.header-colored
  background #23203b