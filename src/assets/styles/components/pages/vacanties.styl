.vacanties
  background: url(./assets/img/bg_space.jpg) repeat-x 100% 0 fixed
  background-position: top;
  background-size cover
  animation: space-vac 50s linear infinite
  height 100%
  .container
    padding-top 1px
    padding 0 20px
    position relative
  .vacanties-content
    color #fff
    height: 100%;
    padding-top 120px
    padding-bottom 100px
    @media(max-width 800px)
      padding-top 40px
      padding-bottom 40px
    h1
      font-size 48px
      font-weight 100
      font-family Montserrat
      margin-bottom 50px
      margin-top 0
      @media(max-width 800px)
        font-size 28px
        margin-bottom 40px
    .vacanties-item
      width 80%
      margin-bottom 60px
      @media(max-width 800px)
        width 100%
      .vacanties-head
        font-weight 400
        font-size 24px
        font-family Montserrat
        padding: 5px 10px;
        background: #3f1c4e;
        display: inline;
        @media(max-width 800px)
          font-size 16px
      .vacanties-text
        font-weight 100
        font-size 18px
        line-height 26px
        font-family Montserrat
        margin-bottom 0
        @media(max-width 800px)
          font-size 14px
          line-height 22px
        a
          color #ffffff
          font-weight 400
      .more
        float right
        margin-top 0
        color #ffffff
        text-decoration none
        background #401c4e
        padding: 5px 10px;
        font-weight 100
        margin-top: 10px;
        &:hover
          background #773392

@keyframes space-vac
    from { background-position: -3840px 0, 0 0;}
    to { background-position: 100% 0; }