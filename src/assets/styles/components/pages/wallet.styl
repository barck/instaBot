 .wallet-container
   .btn-auth
     padding 20px 40px
     @media(max-width 768px)
        width 100%
  .wallet-flex
    display flex
    flex-wrap wrap
    justify-content space-between
    align-items center
    padding 0 50px
    .cash-balance, .free-balance, .buy
      @media(max-width 768px)
        width 100%
      p
        text-align center
        font-size 22px
        line-height 36px
        span
          font-weight 700
          font-size 24px
  p.sub-text
    text-align center
    margin-bottom 0
    padding-bottom 0

.transactions-btn
  color #009688
  text-align center
  display block
  text-decoration underline
  cursor pointer

table 
  font-family: "Lucida Sans Unicode", "Lucida Grande", Sans-Serif;
  font-size: 14px;
  border-collapse: collapse;
  text-align: center;
  font-size 12px
  margin 0 auto
  margin-top 20px

tr
  border-bottom: 2px solid #0096883d;

th, td
  background: #009688
  color: #585858
  padding: 10px 15px;
th
  color #fff
th, td 
  border-style: solid;
  border-width: 0 1px 1px 0;
  border-color: white;

td 
  background: #fefefe;

th:first-child, td:first-child 
  text-align: left;
