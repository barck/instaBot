.main-content
  background: url(./assets/img/17.jpg) no-repeat
  background-size: cover;
  background-position: top;

.advantages-screen
  position relative
  padding-bottom 100px
  @media(max-width 960px)
    padding 0 20px
  img
    max-width 800px
    @media(max-width 1130px)
      max-width 500px
    @media(max-width 960px)
      display none

.advantages-content
  position relative
  width 100%
  text-align center

.adv-item
  color: #fff;
  position: absolute;
  width: 330px;
  text-align: right;
  font-family Montserrat
  @media(max-width 1130px)
    width 240px
  @media(max-width 960px)
    position static
    width 100%
    text-align left
    margin-bottom 20px
  span
    font-size 15px
    line-height 26px
    font-weight 100
    @media(max-width 1130px)
      font-size 12px
      line-height 18px
  p
    margin 0
    margin-bottom 5px
    font-weight 500
    @media(max-width 1130px)
      font-size 12px
      line-height 18px
      margin-bottom 0

