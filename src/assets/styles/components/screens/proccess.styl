.proccess-screen
  color #fff
  padding-top 20px
  padding-bottom 100px
  @media(max-width 800px)
    padding-bottom 0
  .container
    padding 0 20px
  h2
    font-size 48px
    font-weight 100
    margin-bottom 30px
    color #8f44ad
    font-family Montserrat
    @media(max-width 800px)
      font-size 28px
p.underhead
  font-family Montserrat
  font-size 26px
  line-height 42px
  font-weight 100
  width auto
  margin 0 auto
  margin-bottom 80px
  padding 0 10vh
  text-align center
  @media(max-width 1400px)
    width auto
    padding 0 20px
    font-size 22px
    line-height 38px
    margin-bottom 40px
  @media(max-width 800px)
    font-size 14px
    line-height 22px
    text-align left
.proccess-item
  width 100%
  display flex
  flex-wrap wrap
  justify-content space-between
  align-items center
  margin-bottom 10px
  font-family Montserrat
  text-align left
  @media(max-width 600px)
    margin-bottom 40px
  &:nth-child(2n)
    text-align right 
  img
    width 150px
    @media(max-width 800px)
      width 90px
  .proccess-item-desc
    width 80%
    @media(max-width 800px)
      width 65%
  p.proccess-item-head
    font-size 24px
    font-weight 400
    margin 0
    margin-bottom 10px
    @media(max-width 600px)
      font-size 18px
  ul
    list-style-type none
    margin 0
    padding 0
    li
      margin 0
      padding 0
      font-size 18px
      font-weight 100
      margin-bottom 5px
      @media(max-width 600px)
        font-size 12px