.hero-screen
  background: url(./assets/img/bg_space1.jpg) repeat-x 100% 0 fixed
  background-position: top;
  height: 100vh;
  animation: space 350s linear infinite

@keyframes space 
  from { background-position: 3840px 0, 0 0;}
  to { background-position: 100% 0; }

.hero-clouds
  background: url(./assets/img/bg_clouds.png) repeat-x 100% 0 fixed;
  background-position: top;
  animation: clouds 80s linear infinite;
  height: 100vh;

@keyframes clouds
  from { background-position: 100% 0; }
  to { background-position: 3840px 0, 0 0;}

.hero-content
  background: url(./assets/img/bg_mountains.png) repeat-x;
  height: 100vh;
  animation: mountains 40s linear infinite;
  text-align center
  padding-top 1px
  background-position bottom
  @media(max-width 768px)
    background-position: bottom !important;
    background-repeat: no-repeat !important;
    background-size: 200vh !important;
  h1
    color #fff
    font-weight 100
    font-size 60px
    line-height 80px
    padding 0 10px
    margin-top 25vh
    margin-bottom 20vh
    font-family Montserrat
    text-transform uppercase
    @media(max-width 768px)
      font-size 22px
      line-height 45px
      margin-bottom 10vh
  p
    color #fff
    font-weight 100
    font-size 24px
    padding 0 100px
    line-height 38px
    font-family Montserrat
    @media(max-width 768px)
      font-size 15px
      line-height 25px
      padding 0 10px

.arrow
  cursor pointer
  margin-left -26px
  position absolute
  bottom 15%
  @media(max-width 960px)
    bottom 10%
  &:hover
    transform scale(1.2)
    transition: .2s

.fadeInDown 
  animation-name: fadeInDown;
  animation-duration: 5s;
  animation-fill-mode: both;
  
  @keyframes fadeInDown
    0%
      opacity: 0
    100%
      opacity: 1
